#!/bin/bash

# (C) 2012-2015 Fathi Boudra <fathi.boudra@linaro.org>
# (C) 2015 Rohan Garg <rohan@garg.io>

# Create configuration for live-build.

# You need live-build package installed.

set -e
set -x

echo "I: create configuration"
export LB_BOOTSTRAP_INCLUDE="apt-transport-https gnupg initramfs-tools"

arch=$(dpkg-architecture -qDEB_HOST_ARCH)

if [ "$arch" == "armhf" ]; then
    FMT="tar"
    OTHER_OPTS="--linux-flavours none --linux-packages none --chroot-filesystem none --binary-filesystem ext4"
else
    FMT="iso-hybrid"
fi

# Set name for image file
export LIVE_IMAGE_NAME="netrunner-debian-core_$(date +%Y%m.%H%M)"

echo "I: Format is $FMT"

lb config \
 --archive-areas 'main contrib non-free' \
 --backports true \
 --distribution jessie \
 --binary-images $FMT \
 --bootappend-live "boot=live hostname=live-pc username=live" \
 --mode debian \
 --security false \
 --updates false \
 --apt-source-archives false \
 --source false \
 --apt-options "--yes -o Debug::pkgProblemResolver=true -o Debug::pkgDepCache::AutoInstall=true -o Debug::pkgDepCache::Marker=true" \
 $OTHER_OPTS

echo "I: copy customization"
test -d customization && cp -rf customization/* config/

echo "I: done"
